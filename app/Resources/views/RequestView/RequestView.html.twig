{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <table class="table table-bordered table">
            <tbody>
                <tr>
                    <th>Request Number</th>
                    <td>{{ request.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ request.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ request.email }}</td>
                </tr>
                <tr>
                    <th>Contact Number</th>
                    <td>{{ request.contactNumber ?: '-' }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ request.isActive ? "Active" : "Closed" }}</td>
                </tr>
                <tr>
                    <th>Company</th>
                    <td>{{ request.company ?: '-' }}</td>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <td>{{ request.quantity ?: '-'}}</td>
                </tr>
                <tr>
                    <th>Supported Platforms</th>
                    <td>
                        {% if not request.isAmazon and not request.isWalmart and not request.isEbay %}
                            -
                        {% else %}
                            {% if request.isAmazon %}
                                Amazon {{ request.isEbay ? ',' : request.isWalmart ? ',' : '' }}
                            {% endif %}
                            {% if request.isEbay %}
                                Ebay {{ request.isWalmart ? ',' : '' }}
                            {% endif %}
                            {% if request.isWalmart %}
                                Walmart
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Other Platforms</th>
                    <td>
                        {% if request.otherPlatform %}
                            {% for otherPlatform in request.otherPlatform|json_decode %}
                                {{ otherPlatform|capitalize }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Date Posted</th>
                    <td>{{ request.postedAt|date('m/d/Y') }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ request.message }}</td>
                </tr>
            </tbody>
      </table>
    </div>
{% endblock %}