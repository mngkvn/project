<script src="{{ asset('js/jquery.magnific-popup.js') }}"></script>
<script src="{{ asset('js/autosize.js') }}"></script>
<script>
    $.noConflict();
    jQuery(document).ready(function () {
        /*
            Remove invalid class if the user focuses on the invalid element.
        */
        jQuery(".is-invalid").on('focus', function () {
            jQuery(this).removeClass('is-invalid');
        });

        /*
            Initiate js-auto-size for textarea
        */
        jQuery('textarea.js-auto-size').textareaAutoSize();

        /*
             Disabled elements will be enabled before submitting the form to the server.
         */
        jQuery("form").bind("submit", function () {
            jQuery(this).find("input,textarea,select").addClass('bgDisabled').removeAttr('disabled');
        })
    });
</script>
{% block javascripts %}{% endblock %}
